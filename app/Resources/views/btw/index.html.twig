{% extends 'base.html.twig' %}

{% block body %}
    <h1>Btws list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Percentage</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for btw in btws %}
            <tr>
                <td><a href="{{ path('btw_show', { 'id': btw.id }) }}">{{ btw.id }}</a></td>
                <td>{{ btw.percentage }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('btw_show', { 'id': btw.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('btw_edit', { 'id': btw.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('btw_new') }}">Create a new btw</a>
        </li>
    </ul>
{% endblock %}
